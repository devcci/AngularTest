{
    "extends": "../tslint.json",
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            [
                ""
            ],
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            [
                ""
            ],
            [
                "kebab-case",
                "camelCase"
            ]
        ],
        "quotemark" : [
            true,
            "single"
        ]
    }
}
